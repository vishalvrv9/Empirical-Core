<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>Create a new concept</h2>
      <%= form_tag "/cms/concepts" do %>
        <div class="form-group">
          <label for="concept[name]">Name</label>
          <%= text_field_tag "concept[name]", "", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="concept[parent_id]">Parent ID (Leave blank if creating level 2 concept, select a level 2 concept if creating a level 1 concept)</label>
          <%= select_tag("concept[parent_id]", options_for_select(@concepts), :include_blank => true, class: "form-control") %>
        </div>
        <div class="form-group">
          <%= submit_tag "Create" %>
        </div>
      <% end %>
    </div>

  </div>

</div>
